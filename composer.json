{
    "name": "allejo/php-vcr-sanitizer",
    "description": "A set of php-vcr utilities to sanitize API requests",
    "type": "library",
    "require": {
        "php-vcr/php-vcr": "^1.5",
        "symfony/event-dispatcher": "^5.0"
    },
    "require-dev": {
        "donatj/mock-webserver": "^2.1",
        "mikey179/vfsstream": "^1.6",
        "php-curl-class/php-curl-class": "^8.0",
        "phpunit/phpunit": "^4.8|^5.0|^7.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/thecoderszone/php-vcr"
        }
    ],
    "autoload": {
        "psr-4": {
            "allejo\\VCR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "allejo\\VCR\\Tests\\": "tests/VCR/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Vladimir Jimenez",
            "email": "me@allejo.io"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover coverage.clover",
        "fix": "php-cs-fixer fix"
    }
}
